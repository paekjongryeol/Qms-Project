<!-- Child.html -->
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>기안서 작성 팝업창</title>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }
    h5 {
        margin-bottom: 20px;
    }
    .container {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }
    .form-label {
        display: block;
        margin-bottom: 8px;
    }
    .form-control {
        width: 300px; /* 크기 조정 */
        padding: 8px;
        margin-right: 8px; /* 여백 추가 */
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
        display: inline-block; /* 인라인 블록으로 변경하여 버튼과 나란히 배치 */
    }
    .btn {
        padding: 8px 16px;
        font-size: 14px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    .btn-primary {
        background-color: #007bff;
    }
    .btn-info {
        background-color: #17a2b8;
    }
    table {
        border: solid 1.5px black;
        border-collapse: collapse;
        width: 100%;
        font-size: 14px;
        margin-top: 20px;
    }
    thead {
        background-color: #f2f2f2;
        text-align: center;
        font-weight: bold;
    }
    th, td {
        padding: 10px; /* 패딩을 줄임 */
        border: 1px solid #ddd;
        text-align: center; /* 텍스트 가운데 정렬 */
    }
    tbody tr:hover {
        background-color: #f1f1f1;
    }
</style>
</head>
<body>
<form id="popupform">
    <h5>사용자 조회</h5>
    <main class="container">
        <div class="col-12">
            <label for="userName" class="form-label">사용자명</label>
            <input type="text" id="userName" name="userName" class="form-control">
            <button class="btn btn-primary w-100" type="button" onclick="userSearch();">조회</button>
        </div>
        <table class="user__list" id="userTable">
            <thead>
                <tr>
                    <th>NO</th>
                    <th>성명</th>
                    <th>부서</th>
                    <th>직위</th>
                    <th>퇴사여부</th>
                    <th>선택</th>
                </tr>
            </thead>
            <tbody>
                <!-- 여기에 사원 목록이 동적으로 추가될 예정 -->
            </tbody>
        </table>
    </main>
</form>
<script src="/assets/js/common.js"></script>
<script src="/assets/js/jquery-3.7.1.js"></script>
<script>
		function userSearch() {
			call_server(popupform, "/approve/userSearch", userlist);
	    }
		
		var userlist;
		
		function userlist(list) {
			userlist = list;
		    $('#userTable > tbody').empty();
		    for (var i = 0; i < list.length; i++) {
		        var str = "<tr>";
		        str += "<td>" + (i + 1) + "</td>"; 
		        str += "<td>" + list[i].userName + "</td>";
		        str += "<td>" + list[i].deptName + "</td>";
		        str += "<td>" + list[i].comName + "</td>";
		        str += "<td>" + list[i].leaveYn + "</td>";
		        str += "<td><button type='button' class='btn btn-info' onclick='sendData(\"" + i + "\");'>선택</button></td>";
		        str += "</tr>";
		        $('#userTable > tbody').append(str);
		    }
		}

		
		function sendData(idx) {
			window.opener.setUserInfo(userlist[idx]);
		    //window.opener.postMessage(userName, window.location.origin);
		}

</script>
</body>
</html>
